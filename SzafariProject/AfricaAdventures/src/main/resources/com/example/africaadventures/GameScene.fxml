<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="gameSc" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.viewmodel.GameView">
   <center>
      <AnchorPane fx:id="gamePane" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </AnchorPane>
   </center>

   <right>
      <AnchorPane maxWidth="180.0" minWidth="145.0" BorderPane.alignment="CENTER">
         <children>
            <ScrollPane fitToWidth="true" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="7.0" AnchorPane.rightAnchor="7.0" AnchorPane.topAnchor="10.0">
               <VBox fx:id="menuContainer" spacing="10.0">
                  <HBox prefHeight="34.0" prefWidth="164.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#toHome" prefHeight="26.0" prefWidth="80.0" text="HOME" />
                        <Button mnemonicParsing="false" onAction="#saveGame" prefHeight="26.0" prefWidth="80.0" text="SAVE">
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <Label fx:id="moneyLabel" contentDisplay="CENTER" styleClass="label-hud" text="Money: 0" />
                  <Label fx:id="timeLabel" contentDisplay="CENTER" styleClass="label-hud" text="Time: M00, D00, H00" />
                  <Button mnemonicParsing="false" onAction="#showShop" prefHeight="26.0" prefWidth="165.0" text="SHOP" />
                  <Button fx:id="plantMenu" mnemonicParsing="false" prefHeight="26.0" prefWidth="165.0" text="Plants" />
                  <Button fx:id="animalMenu" mnemonicParsing="false" prefHeight="26.0" prefWidth="165.0" text="Animals" />
                  <Button fx:id="utilMenu" mnemonicParsing="false" prefHeight="26.0" prefWidth="165.0" text="Utilities" />
                  <HBox alignment="CENTER" spacing="10.0">
                     <Button fx:id="okBtn" mnemonicParsing="false" onAction="#purchaseConfirm" prefHeight="25.0" prefWidth="50.0" text="OK" />
                     <Button fx:id="noBtn" mnemonicParsing="false" onAction="#purchaseCancel" prefHeight="25.0" prefWidth="50.0" text="NO" />
                  </HBox>
                  <StackPane>
                     <VBox fx:id="shopContainer" prefWidth="165.0" />
                     <VBox fx:id="infoContainer" alignment="CENTER_LEFT" prefWidth="165.0" styleClass="info-box" visible="false">
                        <children>
                           <Label fx:id="infoLabel1" text="Type: " />
                           <Label fx:id="infoLabel2" text="Price:" />
                           <Label fx:id="infoLabel3" text="Info1:" />
                           <Label fx:id="infoLabel4" text="Info2:" />
                           <Slider fx:id="slider" />
                           <Label fx:id="ticketLabel" />
                        </children>
                        <padding>
                           <Insets left="20.0" />
                        </padding>
                     </VBox>
                  </StackPane>
               </VBox>
            </ScrollPane>
            <ChoiceBox fx:id="speedChoiceBox" prefHeight="25.0" prefWidth="165.0" styleClass="choice-box" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="7.0" />
         </children>
      </AnchorPane>
   </right>
</BorderPane>
