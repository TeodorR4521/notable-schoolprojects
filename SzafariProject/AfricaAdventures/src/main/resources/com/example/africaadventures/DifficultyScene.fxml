                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin></Button>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0">
               <children>
                  <Label text="Difficulty" styleClass="diff-section"/>
                  <Label fx:id="difficultyLabel" text="EASY" styleClass="diff-section"/>
