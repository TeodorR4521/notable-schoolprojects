                  <Insets left="20.0" right="20.0" />
               </HBox.margin></Button>
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </HBox>
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#toHome" text="HOME">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="5.0" top="20.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#toGame" text="START">
               <HBox.margin>
                  <Insets bottom="20.0" left="5.0" right="20.0" top="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
