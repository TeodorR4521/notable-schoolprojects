                        <Label fx:id="goalMoney" text="Money: 1000" styleClass="stat-label"/>
                        <Label fx:id="goalCarnivore" text="Carnivores: 5" styleClass="stat-label"/>
                        <Label fx:id="goalHerbivore" text="Herbivores: 10" styleClass="stat-label"/>
